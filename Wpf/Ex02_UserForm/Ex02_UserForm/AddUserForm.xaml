        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex02_UserForm"
        mc:Ignorable="d"
        Title="AddUserForm" Height="115" Width="270">
    <Grid Margin="10,0,10,10">
        <StackPanel>
            <TextBox Name="txtName" Margin="0,5"></TextBox>
            <Button Click="btnAddUser_Click" Height="20" Margin="20, 10">Add User</Button>
        </StackPanel>
    </Grid>
</Window>
