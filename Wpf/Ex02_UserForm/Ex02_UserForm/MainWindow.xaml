<Window x:Class="Ex02_UserForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex02_UserForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="5,0">
            <Button Name="btnInsertUser" Click="btnInsertUser_Click">Insert User</Button>
            <Button Name="btnModifyUser" Click="btnModifyUser_Click" Margin="0,3">Modify User</Button>
            <Button Name="btnDeleteUser" Click="btnDeleteUser_Click">Delete User</Button>
        </StackPanel>
        <ListBox Name="lstUsers" DisplayMemberPath="Name" />
    </DockPanel>
</Window>
